# top-most EditorConfig file
root = true

# Unix-style newlines with a newline ending every file
[*]
end_of_line = lf
trim_trailing_whitespace = true
insert_final_newline = true
charset = utf-8

# Space indentation
[*.{js, ts, pug, scss, json}]
indent_style = space
indent_size = 2

# Dont trim whitespace in markdown
[*.md]
trim_trailing_whitespace = false
